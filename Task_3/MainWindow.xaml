<Window x:Class="Task_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="261" Width="306">
    <Grid>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="120,148,0,0" VerticalAlignment="Top" Height="35" Width="70" Click="StartButton_Click"/>
        <TextBlock x:Name="TimeBox" HorizontalAlignment="Center" Margin="0,36,0,0" TextWrapping="Wrap" Text="0 : 0" VerticalAlignment="Top" FontSize="72"/>
        <Button x:Name="ResetButton" Content="Rset" HorizontalAlignment="Left" Margin="70,148,0,0" VerticalAlignment="Top" Height="35" Width="45" Click="ResetButton_Click"/>
        <Button x:Name="PauseButton" Content="Pause" HorizontalAlignment="Left" Margin="195,148,0,0" VerticalAlignment="Top" Height="35" Width="45" Click="PauseButton_Click"/>

    </Grid>
</Window>
